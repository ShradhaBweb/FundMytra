<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.design.widget.TabLayout
        android:id="@+id/simpleTabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tab_line"
        app:tabIndicatorColor="#f00"
        app:tabMode="scrollable"
        app:tabPaddingEnd="20dp"
        app:tabGravity="fill"
        app:tabTextAppearance="@style/CustomTextAppearanceTab"
        app:tabSelectedTextColor="@color/color"
        app:tabIndicatorHeight="2.5dp"
        app:tabTextColor="@color/text_colors" >
        <android.support.design.widget.TabItem
            android:id="@+id/my_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <android.support.design.widget.TabItem
            android:id="@+id/my_searches"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           />

        <android.support.design.widget.TabItem
            android:id="@+id/my_application"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          />
        <android.support.design.widget.TabItem
            android:id="@+id/your_interest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </android.support.design.widget.TabLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_below="@+id/simpleTabLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</RelativeLayout>