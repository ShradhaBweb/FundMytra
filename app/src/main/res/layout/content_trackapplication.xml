<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".TrackApplicationActivity">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/trackapp"
        android:gravity="center_horizontal"
        android:fontFamily="@font/montserrat"
        android:textSize="20dp"
        android:id="@+id/txt_myapp"

        android:textColor="#000"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/img_phone"
        android:layout_below="@+id/txt_myapp"
        android:src="@drawable/credit_card"
        android:layout_marginTop="20dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_phone"
        android:layout_marginTop="30dp">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Application ID"
            android:fontFamily="@font/montserrat"
            android:background="@null"
            android:textStyle="bold"
            android:layout_marginLeft="40dp"
            android:id="@+id/edit_employee"
            android:textColor="#FFE4E3E3"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:id="@+id/view_emp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="#D12138"
            android:layout_below="@+id/edit_employee"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginTop="35dp"
            android:fontFamily="@font/montserrat"
            android:id="@+id/edit_annual"
            android:layout_marginLeft="40dp"
            android:layout_below="@+id/view_emp"
            android:text="Mobile no"
            android:textColor="#FFE4E3E3"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/view_annual"
            android:background="#D12138"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/edit_annual"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View My Application"
            android:background="@drawable/curved_corner"
            android:layout_below="@+id/view_annual"
            android:layout_marginTop="40dp"
            android:textAllCaps="false"
            android:textSize="20dp"
            android:fontFamily="@font/montserrat"
            android:padding="10dp"
            android:textColor="#fff"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

    </RelativeLayout>

</RelativeLayout>