<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/rel_header"
        android:background="@color/fundRed"
        android:gravity="bottom"
        android:orientation="vertical"
        android:paddingRight="10dp"
        android:paddingTop="20dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rel1"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true">
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/nav_header_desc"
                android:paddingTop="@dimen/nav_header_vertical_spacing"
                android:layout_marginRight="20dp"
                app:srcCompat="@mipmap/fundmytra_logo_round" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:id="@+id/img_fundmytra"
                android:src="@drawable/fundmytratext"
                android:layout_toRightOf="@+id/imageView"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Online Loans Partner"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/fwhite"
                android:textSize="18dp"
                android:layout_below="@+id/img_fundmytra"
                android:layout_toRightOf="@+id/imageView"/>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel_header"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="40dp"
        android:background="@color/fwhite"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jayaram Suresh"
            android:textSize="16dp"
            android:id="@+id/txt_name"
            android:textColor="#000000"
            android:fontFamily="@font/montserrat"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Mobile Number : "
            android:textColor="#000000"
            android:id="@+id/txt_phone"
            android:fontFamily="@font/montserrat"
            android:layout_below="@+id/txt_name"
            android:layout_marginTop="10dp"
            android:textSize="12dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_get_phone"
            android:layout_toRightOf="@+id/txt_phone"
            android:layout_below="@+id/txt_name"
            android:textColor="#000000"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat"
            android:textSize="12dp"
            android:text="+91 7760785086"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your email id : "
            android:textSize="12dp"
            android:layout_below="@+id/txt_phone"
            android:layout_marginTop="10dp"
            android:textColor="#000000"
            android:fontFamily="@font/montserrat"
            android:id="@+id/txt_email" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_get_phone"
            android:layout_toRightOf="@+id/txt_email"
            android:layout_marginTop="10dp"
            android:text="ram2527@gmail.com"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="12dp"
            android:fontFamily="@font/montserrat"/>
    </RelativeLayout>
</RelativeLayout>